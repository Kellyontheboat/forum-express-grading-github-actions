<div class="row">
  <div class="col-md-12">
    <h1>{{user.name}}</h1>
    <p>{{user.email}}</p>
  </div>
  <div class="col-md-4">
    <img class="img-responsive center-block" src="{{user.image}}"
      style="width: 250px; margin-bottom: 25px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
  </div>
</div>
<a class="btn btn-outline-secondary" href="/users/{{user.id}}/edit">Edit</a>


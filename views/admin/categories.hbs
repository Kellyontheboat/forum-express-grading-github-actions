<h1>餐廳分類後台</h1>
{{> admin-tabs route="categories"}}
<br/>
{{#if category}}
<form action="/admin/categories/:id?_method=PUT" method="POST">
  <div class="col-auto">
    <input type="text" class="form-control" name="category" placeholder="Category name" value="{{this.name}}">
  </div>
  <div class="col-auto">
    <button type="submit" class="btn btn-primary mb-3">Update</button>
  </div>
</form>
<form action="/admin/categories/create" method="POST"></form>
  <div class="col-auto">
    <button type="submit" class="btn btn-primary mb-3">Create new</button>
  </div>
</form>
{{else}}
<form action="/admin/categories" method="POST" class="row g-3">
  <div class="col-auto">
    <input type="text" class="form-control" name="category" placeholder="Category name">
  </div>
  <div class="col-auto">
    <button type="submit" class="btn btn-primary mb-3">Create</button>
  </div>
</form>
{{/if}}
<br/>
<table class="table align-middle">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Category Name</th>
    </tr>
  </thead>
  <tbody>
    {{#each categories}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>
        <button type="button" class="btn btn-link">
          <a class="btn btn-link link-primary" href="/admin/restaurants/{{this.id}}">
            Show
          </a>
        </button>
      </td>
      <td>
        <button type="button" class="btn btn-link">
          <a class="btn btn-link link-primary" href="/admin/restaurants/{{this.id}}/edit">
            Edit
          </a>
        </button>
      </td>
      <td>
        <form action="/admin/restaurants/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link link-danger"
            onclick="return confirm(`確定要刪除 {{ this.name }} 嗎？`)">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>